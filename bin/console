#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use MyCommands\Command\HelloCommand;
use MyCommands\Command\OpenAIAskCommand;
use MyCommands\Command\OpenAICommand;
use MyCommands\Command\OpenAICommitCommand;

$app = new Application('My Commands', '1.0.0');

$commands = [
    HelloCommand::class,
    OpenAIAskCommand::class,
    OpenAICommitCommand::class,
];

foreach ($commands as $command) {
    $app->add(new $command());
}

$app->run();